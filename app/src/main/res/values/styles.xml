<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="@style/Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>
    <style name="Label" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/milkyWhite</item>
        <item name="colorControlActivated">@color/milkyWhite</item>
        <item name="colorControlHighlight">@color/milkyWhite</item>
    </style>


    <style name="LoginButton" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:layout_height">75dp</item>
        <item name="android:layout_width">290dp</item>
        <item name="android:padding">3dp</item>
    </style>

    <style name="LoginLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorControlNormal">@color/milkyWhite</item>
        <item name="colorControlActivated">@color/milkyWhite</item>
        <item name="android:letterSpacing">0.2</item>
        <item name="android:ems">10</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/milkyWhite</item>
        <item name="android:textColorHint">@color/milkyWhite</item>
        <item name="android:fontFamily">@font/amiko</item>
        <item name="boxStrokeColor">#fff</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="LoginEditText" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/milkyWhite</item>
        <item name="android:fontFamily">@font/amiko</item>
    </style>

    <style name="Switch">
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginBottom">12.8dp</item>
        <item name="android:fontFamily">@font/amiko</item>
        <item name="android:textColor">@color/milkyWhite</item>
        <item name="android:gravity">center</item>
        <item name="android:checked">true</item>
    </style>

    <style name="LoginSmallTextView" parent="Theme.MaterialComponents.Light">
        <item name="android:textSize">12.8sp</item>
        <item name="android:gravity">center</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:fontFamily">sans-serif-condensed-light</item>
        <item name="android:textColor">@color/milkyWhite</item>
        <item name="android:layout_margin">4dp</item>
    </style>


    <!-- dialog button (neutral) -->
    <style name="MediumButton" parent="@android:style/Widget.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@string/font_family_light</item>
        <item name="android:background">@drawable/outline_rounded</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <!-- dialog animation -->
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_on_anim</item>
        <item name="android:windowExitAnimation">@anim/dialog_out_anim</item>
    </style>



</resources>
